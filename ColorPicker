public void ColorPicker (final SeekBar _red, final SeekBar _green, final SeekBar _blue, final SeekBar _alpha, final View _colorField, final TextView _textview) {
		_colorField.setBackgroundColor(Color.argb(alpha.getProgress(), _red.getProgress(), _green.getProgress(), _blue.getProgress()));
		
		_alpha.getProgressDrawable().setColorFilter(Color.rgb(_red.getProgress(), _green.getProgress(), _blue.getProgress()), PorterDuff.Mode.SRC_IN);
		
		_alpha.getThumb().setColorFilter(Color.rgb(_red.getProgress(), _green.getProgress(), _blue.getProgress()), PorterDuff.Mode.SRC_IN);
		
		String hex = String.format("#%02X%02X%02X%02X", 
		alpha.getProgress(),
		_red.getProgress(), _green.getProgress(), _blue.getProgress()); 
		
		_textview.setText(hex);
		
		
	}
